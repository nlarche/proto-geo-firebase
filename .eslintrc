{
  "extends": [
    
  ],
  "plugins": [
    "babel",
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true  
  },
 "rules": {
    "quotes": 0,
    "no-console": 1,
    "no-debugger": 1,
    "no-var": 1,
    "semi": [2, "always"],
    "no-extra-semi": 2,
    "no-trailing-spaces": 0,
    "eol-last": 0,
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    "comma-dangle" : [1, "only-multiline"],    
    "max-len": [1, 100],       
    "max-lines": [1, 400],
    "no-mixed-spaces-and-tabs": 2,
    "object-curly-spacing": [2, "always"],
    "array-bracket-spacing": [2, "never"],
    "keyword-spacing": [2, {
        "before": true,
        "after": true
    }],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [0, "always"],
    "space-in-parens": [2, "never"]
    }
}